<Page
    x:Class="JustBedwars.Views.LeaderboardsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JustBedwars.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="6">
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                

                <controls:Segmented x:Name="TimeFilterSelector"
                                    SelectionChanged="TimeFilterSelector_SelectionChanged"
                                    Visibility="Collapsed"
                                    SelectedIndex="0"
                                    Grid.Column="1">
                    <controls:SegmentedItem Content="Weekly"/>
                    <controls:SegmentedItem Content="Lifetime"/>

                    <animations:Implicit.ShowAnimations>
                        <animations:ScaleAnimation Duration="0:0:0.5" From="0.9" To="1"/>
                        <animations:TranslationAnimation Duration="0:0:0.5" From="-24,1,0" To="0"/>
                        <animations:OpacityAnimation Duration="0:0:0.5" From="0" To="1"/>
                    </animations:Implicit.ShowAnimations>
                    <animations:Implicit.HideAnimations>
                        <animations:ScaleAnimation Duration="0:0:0.5" From="1" To="0.9"/>
                        <animations:TranslationAnimation Duration="0:0:0.5" From="0" To="-24,1,0"/>
                        <animations:OpacityAnimation Duration="0:0:0.5" From="1" To="0"/>
                    </animations:Implicit.HideAnimations>
                </controls:Segmented>

                <controls:Segmented SelectedIndex="0"
                                    SelectionChanged="LeaderboardSelector_SelectionChanged"
                                    x:Name="LeaderboardSelector"
                                    Grid.Column="0">
                    <controls:SegmentedItem Content="Stars"/>
                    <controls:SegmentedItem Content="Wins"/>
                    <controls:SegmentedItem Content="Finals"/>
                </controls:Segmented>

                <TextBlock Grid.Column="2"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="8"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    Click players for their Stats!
                </TextBlock>
            </Grid>
        </StackPanel>

        <ListView x:Name="LeaderboardList" Grid.Row="1" IsItemClickEnabled="True" ItemClick="LeaderboardList_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Rank}" Margin="0,0,12,0"/>
                        <TextBlock Grid.Column="1" Text="{Binding Name}" />
                        <TextBlock Grid.Column="2" Text="{Binding Value}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <ProgressRing x:Name="LoadingIndicator" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50" IsActive="False"/>
    </Grid>
</Page>